# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
#end_of_line = lf  # Let Git handle this automatically
insert_final_newline = true
trim_trailing_whitespace = true

# Required for localisation files
[*.yml,*.yaml]
charset = utf-8-bom

[*.txt]
indent_style = tab

[*.bash,*.sh]
end_of_line = lf

[*.bat,*.ps1]
end_of_line = crlf

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Ignore binary files
[*.jpg,*.jpeg,*.jpe,*.jif,*.jfif,*.jfi,*.png,*.gif,*.webp,*.tiff,*.tif,*.psd,*.raw,*.arw,*.cr2,*.nrw,*.k25,*.bmp,*.dib,*.heif,*.heic,*.ind,*.indd,*.indt,*.jp2,*.j2k,*.jpf,*.jpx,*.jpm,*.mj2,*.svgz,*.ai,*.eps,*.pdf,*.dds,*.exe,*.mesh,*.crx]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
