# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
#end_of_line = lf  # Let Git handle this automatically
insert_final_newline = true
trim_trailing_whitespace = true

# Required for localisation files
[*.yml,*.yaml]
charset = utf-8-bom

[*.txt]
indent_style = tab

[*.bash,*.sh]
end_of_line = lf

[*.bat,*.ps1]
end_of_line = crlf

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Ignore binary files
[/bin/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
